;delay_01.spn
;POT0 = delay time
;POT1 = feedback
;POT2 = 

EQU	    length		    32767
EQU	    smooth		    0.000125

MEM	    echo		    length

EQU     pot0Smooth	    REG0
EQU     delayOut		REG1
EQU     feedback		REG2
EQU     dryInput		REG3

;POT0 setup
RDAX	POT0, 1
RDFX	pot0Smooth, smooth
WRAX	pot0Smooth, 0

;POT0 delay scaling
RDAX 	pot0Smooth, 1
SOF	    0.96, 0.04 ;40ms to 1000ms
WRAX 	ADDR_PTR, 0
